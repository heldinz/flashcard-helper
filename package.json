{
	"name": "flashcard-helper",
	"version": "1.0.0",
	"description": "A tool for creating vocabulary flashcards",
	"main": "server.js",
	"type": "module",
	"scripts": {
		"start": "node server.js",
		"dev": "nodemon server.js",
		"lint": "npm run lint:css && npm run lint:js",
		"lint:css": "stylelint --fix 'styles.css'",
		"lint:js": "eslint --fix .",
		"format:js": "prettier --write ."
	},
	"dependencies": {
		"axios": "1.6.0",
		"cheerio": "1.0.0-rc.12",
		"cors": "2.8.5",
		"express": "4.18.2"
	},
	"devDependencies": {
		"@eslint/js": "9.27.0",
		"@eslint/markdown": "6.4.0",
		"eslint": "9.27.0",
		"eslint-plugin-simple-import-sort": "12.1.1",
		"globals": "16.1.0",
		"nodemon": "3.0.1",
		"prettier": "3.5.3",
		"stylelint": "16.19.1",
		"stylelint-config-standard": "38.0.0",
		"stylelint-order": "7.0.0"
	}
}
